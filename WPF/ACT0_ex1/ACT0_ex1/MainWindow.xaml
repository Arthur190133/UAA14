<Window x:Class="ACT0_ex1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ACT0_ex1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Up Left" HorizontalAlignment="Left" Margin="-0.6,0,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="Red"/>
        <Button Content="Up Right" HorizontalAlignment="Right" Margin="-0.6,0,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="#FF97FF00"/>
        <Button Content="Down Right" HorizontalAlignment="Right" Margin="-0.6,0,0,0" VerticalAlignment="Bottom" Background="{x:Null}" Foreground="#FFFF00E8"/>
        <Button Content="Down Left" HorizontalAlignment="Left" Margin="-0.6,0,0,0" VerticalAlignment="Bottom" Background="{x:Null}" Foreground="#FF008BFF"/>

    </Grid>
</Window>
